<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#D7A1F9">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:id="@+id/Add_card"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:background="#B24BF3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="62dp"
                            android:background="@drawable/photos"
                            android:padding="10dp"
                            tools:ignore="VectorDrawableCompat" />

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnTakeExtPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#D7A1F9"
                            android:textColor="@color/black"
                            android:text="@string/take_photo"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/Modify_card"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:background="#B24BF3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="ExtraText">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/camera"
                            android:padding="10dp" />

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnCameraActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera Activity"
                            android:backgroundTint="#D7A1F9"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Search_card"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:background="#B24BF3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/face"
                            android:padding="10dp" />

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnFaceDetectActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Face Detect Activity"
                            android:backgroundTint="#D7A1F9"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Viewall_card"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:background="#B24BF3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/image"
                            android:padding="10dp" />

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnLabelerActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Image Label"
                            android:backgroundTint="#D7A1F9"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Summary"
                    android:layout_width="337dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:background="#B24BF3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/text"
                            android:padding="10dp" />


                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnTextRecogActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Text Recognition Activity"
                            android:backgroundTint="#D7A1F9"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>